APP_ENV=dev
APP_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:5173

# Database
DATABASE_URL=sqlite:///./agentsocials.db

# Encryption for token storage (generate your own 32-byte base64 key)
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKENS_FERNET_KEY=

# FireCrawl
FIRECRAWL_API_KEY=
FIRECRAWL_API_BASE=https://api.firecrawl.dev

# LLM (optional but recommended for generation)
GEMINI_API_KEY=
# gemini-pro has a more generous free tier; gemini-2.5-flash is limited (e.g. 20 req/day)
GEMINI_MODEL=gemini-pro

# OAuth - Twitter (X) OAuth2 PKCE
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=http://localhost:8000/v1/oauth/twitter/callback

# OAuth - LinkedIn OAuth2
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:8000/v1/oauth/linkedin/callback

